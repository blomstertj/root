[Unit]
Description=Pacman mirrorlist update using the reflector package
Requires=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/bin/reflector --protocol https --country 'United States' --latest 10 --age 12 --sort rate --save /etc/pacman.d/mirrorlist && /usr/bin/pacman -Syy

[Install]
RequiredBy=multi-user.target
